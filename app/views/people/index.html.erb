<h1>All People</h1>

<div>
    <h2>Search For People</h2>
    <%= form_tag(people_search_path, :method => 'get') do %>
        First Name: <%= search_field_tag(:search, params[:search], :placeholder => "Darth") %>
        <%= submit_tag("Search") %>
    <% end %>
</div>
<br>
<table>
    <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th> 
                <th>Location</th>           
                <th>Species</th>
                <th>Gender</th>
                <th>Affiliation</th>
                <th>Weapon</th>
                <th>Vehicle</th>      
            </tr>
    </thead>

    <tbody>
        <% @people.each do |person| %>
            <tr>
                <td><%= link_to person.first_name, person %>
                </td>
                <td><% if person.last_name.present?%> 
                    <%= person.last_name %>
                <% end%>
                </td>
                <td><% if person.location_id.present?%> 
                    <%= person.location_id %>
                <% end%>
                </td>                
                <td><% if person.species.present?%> 
                    <%= person.species %>
                <% end%>
                </td>
                <td><% if person.gender.present?%> 
                    <%= person.gender %>
                <% end%>
                </td>
                <td><% if person.affiliation_id.present?%> 
                    <%= person.affiliation_id %>
                <% end%>
                </td>
                <td><% if person.weapon.present?%> 
                    <%= person.weapon %>
                <% end%>
                </td>
                <td><% if person.vehicle.present?%> 
                    <%= person.vehicle %>
                <% end%>
                </td>
                                                   
            </tr>
            
        <% end %>
    <tbody>
    <%= will_paginate(@people) %>
</table>


