<%= form_for @person do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :required => true %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name, :required => true %>

    <%= f.label :species %>
    <%= f.text_field :species %>

    <%= f.label :gender %>
    <%= f.text_field :gender %>

    <%= f.label :weapon %>
    <%= f.text_field :weapon %>

    <%= f.label :vehicle %>
    <%= f.text_field :vehicle %>    

    <%= f.submit %>
<% end %>